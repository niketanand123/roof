        <td></td>
        <td colspan="2">City: <%= f.text_field :city2 %> State: <%= f.text_field :state2, :size=>"2" %> Zip:<%= f.text_field :zip2, :size=>"10" %></td>
      </tr>
      <tr>
        <td>Website</td>
        <td colspan="4"><%= f.text_field :website, :size=>"100" %></td>
      </tr>
    </table>
  <div class="actions">
    <%= f.submit %>
  </div>

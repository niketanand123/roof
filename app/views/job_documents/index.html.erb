<%= render :partial => 'job_customer_info' %>
<script type="text/javascript">
    $(function() {
        $('a#doc_link').click(function(){
            window.open($(this).attr('target'), "_blank");
            return false;
        });
    });
</script>
<div style="width:100%;">
  <div BGCOLOR="#336699" HEIGHT="13" >
      <span style="background-color:#336699; ">
        <%=image_tag("tab-ldark.gif", :height=>"14", :width => "10")%>
        <span style="font-family: verdana, arial, helvetica; color: #ffffff; font-weight:bold ;font-size: 12px">Listing Job Documents</span>
        <%=image_tag("tab-rdark.gif", :height=>"14", :width => "10")%>
      </span>
  </div>
</div>
<div style="background:#ffffff; line-height: 2px; width: 100%;padding-bottom: 10px;">
  <%=image_tag("dkbluespc.gif", :height=>"2", :width => "100%")%>
</div>

<table width="100%">
  <thead>
    <tr>
      <th align="left">Doc name</th>
      <th align="left">Doc desc</th>
      <th align="left">Doc link</th>
      <th align="left">Link set</th>
      <th align="left"></th>
      <th align="left"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_documents.each do |job_document| %>
      <tr>
        <td><%= job_document.doc_name %></td>
        <td><%= job_document.doc_desc %></td>
        <td><%= job_document.doc_link %></td>
        <td><%= link_to "Doc Link", "#{job_document.doc_link}", :target => "_blank" %></td>
        <td><%= link_to 'Edit', edit_customer_job_site_job_document_path(:customer_id=>@customer.id, :id=>job_document.id,:job_site_id=>job_document.job_site_id) %></td>
        <td><%= link_to 'Delete',customer_job_site_job_document_path(:id=>job_document.id, :customer_id=>@customer.id, :job_site_id=>@job_site.id), method: :delete, data: { confirm: 'Are you sure you want to delete?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
<%= link_to 'Back',  edit_customer_job_site_path(:id=>@job_site.id, :customer_id=>@customer.id) %> &nbsp;
<%= link_to 'New Job Document', new_customer_job_site_job_document_path(:customer_id=>@customer.id, :job_site_id=>@job_site.id) %>

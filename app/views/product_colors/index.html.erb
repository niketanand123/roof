<h1>Listing Product colors</h1>

<table>
  <thead>
    <tr>
      <th>Product color</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @product_colors.each do |product_color| %>
      <tr class="<%= cycle('oddrow', 'evenrow') %>">
        <td><%= product_color.product_color %></td>
        <td><%= link_to 'Edit', edit_product_color_path(product_color) %></td>
        <td><%= link_to 'Delete', product_color, method: :delete, data: { confirm: 'Are you sure you want to delete?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product color', new_product_color_path %>

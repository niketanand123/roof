<p id="notice"><%= notice %></p>
<h1>Search Job Sites</h1>
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<%= render :partial => 'search' %>


<% if @searchText != nil && (@job_sites == nil || @job_sites.count == 0)%>
    <b>No Records .....</b>
    <br/>
    <br/>
<%end%>

<% if @job_sites!= nil && @job_sites.count >= 1 %>
    <table width="50%">
      <thead>
      <tr>
        <th align="left">Contact Name</th>
        <th align="left">Address</th>
        <th align="left">City</th>
      </tr>
      </thead>

      <tbody>
      <% @job_sites.each do |job_site| %>
          <tr>
            <td><%= link_to job_site.contact_name, edit_customer_job_site_path(:id=>job_site.id, :customer_id=>job_site.customer_id) %></td>
            <td><%= job_site.street1%></td>
            <td><%= job_site.city %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br/>
<% end %>
<br/>
<% if @job_sites!= nil && @job_sites.count >= 1 %>
    <div style='width: 800px;'>
      <div id="map" style='width: 800px; height: 400px;'></div>
    </div>
    <script type="text/javascript">
        handler = Gmaps.build('Google');
        handler.buildMap({ provider: {Zoom: 3}, internal: {id: 'map'}}, function(){
            markers = handler.addMarkers(<%=raw @hash.to_json %>);
            handler.bounds.extendWith(markers);
            handler.fitMapToBounds();
        });
    </script>
<% end %>

